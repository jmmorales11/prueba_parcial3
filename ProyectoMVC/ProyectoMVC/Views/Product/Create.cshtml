@model ProyectoMVC.Models.Product

@{
    ViewData["Title"] = "Create";
    // Ejemplo de categorías que podrías proporcionar en la vista
    var categories = new List<SelectListItem>
    {
        new SelectListItem { Value = "Electronics", Text = "Electronics" },
        new SelectListItem { Value = "Accessories", Text = "Accessories" },
        new SelectListItem { Value = "Furniture", Text = "Furniture" },
        new SelectListItem { Value = "Clothing", Text = "Clothing" }
    };
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <h2>Create</h2>

            <h4>Product</h4>
            <hr />
            <form asp-action="Create" class="form-container">
                <div class="form-group">
                    <label asp-for="ProductName" class="control-label">Nombre del Producto</label>
                    <input asp-for="ProductName" class="form-control" id="productName" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Category" class="control-label">Categoría</label>
                    <select asp-for="Category" class="form-control" id="category">
                        <option value="">Seleccione una categoría</option>
                        @foreach (var category in categories)
                        {
                            <option value="@category.Value">@category.Text</option>
                        }
                    </select>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label">Precio</label>
                    <input asp-for="Price" class="form-control" id="price" type="number" step="0.01" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StockQuantity" class="control-label">Cantidad en Stock</label>
                    <input asp-for="StockQuantity" class="form-control" id="stockQuantity" type="number" min="1" />
                    <span asp-validation-for="StockQuantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" id="createButton" />
                    <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
